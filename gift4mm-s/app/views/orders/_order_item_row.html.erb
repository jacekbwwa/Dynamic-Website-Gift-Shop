
        
<div class="well">

  <div class="row">
    
    <div class="col-xs-8">
        <div class="col-xs-4">
      <% if order_item.image? %>
                <%= link_to (image_tag order_item.image, :style => "height:40px, width:40px") %>  &nbsp;
                <% end %></div>
                
    </div>
    <div class="col-xs-4">
        <h4><%= order_item.title %></h4> <h5><%= order_item.description %></h5>
      <h5>Unit price: <%= number_to_currency(order_item.unitprice, :unit => "€") %></h5>
      <h5>Quantity: <%= order_item.quantity %></h5>
      <h4>Total price: <%= number_to_currency( order_item.totalprice, :unit => "€") %></h4>
      
    </div>
    
  </div>
</div>

    
