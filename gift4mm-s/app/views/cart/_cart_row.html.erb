<div class="well">

  <div class="row">
    
    <div class="col-xs-8">
        <div class="col-xs-4">
      <% if item.image? %>
                <%= link_to (image_tag item.image_url, :style => "height:40px, width:40px"), item %>  &nbsp;
                <% end %></div>
                </div>
    
    <div class="col-xs-4">
      <h4><%= item.title %></h4> <h5><%= item.description %></h5></div>
      <h5>Unit price: <%= number_to_currency(item.price, :unit => "€") %></h5>
      <h5>Quantity: <%= quantity %></h5>
      <h4>Total price: <%= number_to_currency( quantity * item.price, :unit => "€") %></h4>
      <a href="/cartdel/<%= item.id %>" data-confirm="Are you sure you wish to delete the product from your cart?" >Delete</a>
      
      
    </div>
    
  </div>
</div>